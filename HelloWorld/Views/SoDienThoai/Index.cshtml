@model IEnumerable<HelloWorld.Models.SoDienThoai>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách số điện thoại</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css">

<table id="datatable" class="table table-striped table-bordered bulk_action">
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th>
                Số điện thoại
            </th>
            <th>Hành động</th>
        </tr>
    </thead>

    <tbody>
        @{ var i = 0;}
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td>
                    @i
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoDT)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaDT }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaDT }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaDT })
                </td>
            </tr>
        }
    </tbody>
</table>

